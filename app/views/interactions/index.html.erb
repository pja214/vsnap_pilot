<h1>List Interactions</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Task</th>
      <th>Complete?</th>
      <th>Response?</th>
      <th>URL</th>
      <th>Comments</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @interactions.each do |interaction| %>
      <tr>
        <td><%= interaction.employee_id %></td>
        <td><%= interaction.task %></td>
        <td><%= interaction.complete %></td>
        <td><%= interaction.response %></td>
        <td><%= interaction.url %></td>
        <td><%= interaction.comments %></td>
        <td><%= link_to 'Show', interaction %></td>
        <td><%= link_to 'Edit', edit_interaction_path(interaction) %></td>
        <td><%= link_to 'Delete', interaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

