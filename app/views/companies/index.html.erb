


<h1>Vsnap Pilot Program: Participating Companies</h1>
<div class="companytable">
    <table>
      <thead>
        <tr class="companylist">
          <th>Company Name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><strong><%= link_to company.name, company %></strong></td>
            <td><%= link_to 'Edit Company', edit_company_path(company) %></td>
            <td><%= link_to 'Delete Company', company, method: :delete, data: { confirm: 'Are you sure you want to delete this company?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<br>
<div class="CTA_addcompBtn">
<%= link_to 'Add New Company', new_company_path %>
</div>