



<p id="notice"><%= notice %></p>

<p class="title">
  <strong>Company:</strong>
  <%= @company.name %>
</p>
<p class="title">
  <strong>Pilot Metric:</strong> <%= @company.pilot_metric %>
</p>
<div class="CTA_addcompBtn">
<%= link_to 'Add New Participant', new_company_employee_path(@company) %> 

</div>
<br />
<%= link_to 'Edit Company Info', edit_company_path(@company) %> 
<br />
<%= link_to 'View All Companies', companies_path %>
<div class="spacer"></div>
<div class="companytable">
    <table>
      <thead>
        <tr>
          <th>Participants</th>
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @company.employees.each do |employee| %>
          <tr>
            <td><strong><%= link_to employee.name, employee_path(employee.id) %></strong></td>
            <td><%= link_to 'Delete Participant', employee_path(employee.id), :method => 'delete', data: { confirm: 'Are you sure you want to delete this participant?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
